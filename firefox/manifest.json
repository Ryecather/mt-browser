{
  "manifest_version": 2,
  "name": "yimt-browser",
  "version": "1.0.8",
  "description": "translate html via yimt service",
  "icons": {
    "48": "icons/icon-48.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "<all_urls>"
  ],
  "browser_action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "yimt-browser",
    "default_popup": "popup/dic_popup.html"
  },
  "background": {
    "scripts": [
      "background-script.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content-script.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    "images/dic.png",
    "images/laba.png",
    "images/love-active.png",
    "images/love-inactive.png"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'; media-src 'self' 'https://citydomain.com/'"
}